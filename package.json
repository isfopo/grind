{
  "name": "grind",
  "displayName": "Grind",
  "publisher": "isfopo",
  "description": "A task manager for your daily struggle.",
  "version": "0.0.18",
  "icon": "assets/icon.png",
  "preview": true,
  "engines": {
    "vscode": "^1.91.0"
  },
  "bugs": {
    "url": "https://github.com/isfopo/grind/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/isfopo/grind"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "activationEvents": [
      "onCommand:grind.refresh",
      "onCommand:grind.reset",
      "onView:grind-explorer",
      "onView:grind-sidebar"
    ],
    "commands": [
      {
        "command": "grind.add",
        "title": "Add",
        "icon": "$(add)"
      },
      {
        "command": "grind.edit",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "grind.refresh",
        "title": "Refresh",
        "category": "Grind",
        "icon": "$(refresh~spin)"
      },
      {
        "command": "grind.reset",
        "category": "Grind",
        "title": "Reset"
      },
      {
        "command": "grind.copy-today",
        "title": "Copy Today's Tasks",
        "category": "Grind"
      },
      {
        "command": "grind.copy-yesterday",
        "title": "Copy Yesterday's Tasks",
        "category": "Grind"
      },
      {
        "command": "grind.copy-day",
        "title": "Copy Day's Tasks",
        "category": "Grind"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "grind.refresh",
          "group": "navigation",
          "when": "view == grind-sidebar || view == grind-explorer"
        },
        {
          "command": "grind.reset",
          "group": "context",
          "when": "view == grind-sidebar || view == grind-explorer"
        }
      ],
      "view/item/context": [
        {
          "command": "grind.add",
          "when": "viewItem == day || viewItem == task",
          "group": "inline"
        },
        {
          "command": "grind.edit",
          "when": "viewItem == task",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "grind-sidebar-view",
          "title": "grind",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "grind-sidebar-view": [
        {
          "id": "grind-sidebar",
          "name": "grind",
          "icon": "media/icon.svg"
        }
      ],
      "explorer": [
        {
          "id": "grind-explorer",
          "name": "grind",
          "icon": "media/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "clean": "rm -rf node_modules && npm i"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.91.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.7.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  }
}
